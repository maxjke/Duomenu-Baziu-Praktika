@{
    ViewData["Title"] = "Įmonių tvarkymas";
}

<link rel="stylesheet" href="~/css/Admin/admin.css" />

<div class="search-container">
    <form method="get" action="/searchStudent">
        <input type="search" id="search" placeholder="Įveskite ID" />
        <button type="submit" for="search">Ieškoti</button>
    </form>
</div>

<div class="container" style="margin-top: 200px">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Įmonės pavadinimas</th>
                <th>Įmonės aprašymas</th>
            </tr>
        </thead>

        <tbody>
            @*   @foreach (var item in Model)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.CompanyName</td>
                <td>@item.CompanyDescription</td>
            </tr>
            } *@
        </tbody>
    </table>

    <div class="form-container">
        <div class="form-check-in">
            <h2>Registruoti nauja įmonę</h2>
            <form class="form-check-in-form" action="/create-company" method="post">
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" placeholder="Įveskite įmonės pavadinimą" id="CompanyName" name="CompanyName" />
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" placeholder="Įveskite įmonės aprašymą" id="CompanyDescription" name="CompanyDescription" />
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-primary">Registruoti</button>
                </div>
            </form>
        </div>
        <div class="form-check-in">
            <h2>Atnaujinti esamą įmonę</h2>
            <form class="form-check-in-form" asp-action="Update" method="post">
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" placeholder="Įveskite ID" />
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" placeholder="Įveskite įmonės pavadinimą" />
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" placeholder="Įveskite įmonės aprašymą" />
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-primary">Atnaujinti</button>
                </div>
            </form>
        </div>
        <div class="form-check-in">
            <h2>Ištrinti esamą įmonę</h2>
            <form class="form-check-in-form" action="/delete-companies" method="post">
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" placeholder="Įveskite ID" name="Id" />
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-primary">Ištrinti</button>
                </div>
            </form>
        </div>
    </div>
</div>